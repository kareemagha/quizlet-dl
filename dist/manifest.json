{
  "manifest_version": 3,
  "name": "quizlet-dl",
  "version": "1.0",
  "description": "download quizlet textbook solutions as a pdf",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://quizlet.com/explanations/textbook-solutions/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "injected/import-answerScraper.js"
      ],
      "matches": [
        "https://quizlet.com/explanations/textbook-solutions/*"
      ]
    }
  ],
  "action": {
    "default_popup": "pages/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "chunks/*-*.js",
        "injected/answerScraper.js"
      ],
      "matches": [
        "https://quizlet.com/*"
      ]
    }
  ]
}